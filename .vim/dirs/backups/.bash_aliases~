# lists all my bash alias

# instant shutdown computer
alias sdn='shutdown -h now'

# instant restart the computer
alias sdr='shutdown -r now'

# -- alias to my dotfiles -- #
alias i3config='vim ~/.config/i3/config'
alias vimconfig='vim ~/.vimrc'
alias bashconfig='vim ~/.bashrc'
alias bashalias='vim ~/.bash_aliases'
alias i3config='vim ~.config/i3/config'

# -- basic navigation -- #
alias c='clear'
alias home='cd ~'
alias root='cd /'
alias ..='cd ..'

# -- program shortcuts -- #
alias v='vim'
alias pip='pip3'
alias python='python3'
